<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HalfAlpha">

    <FrameLayout
        android:id="@+id/markBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/shape_border" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/topLeftButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_radio_checked"
            app:iconSize="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/topRightButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_radio_checked"
            app:iconSize="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottomLeftButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_radio_checked"
            app:iconSize="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottomRightButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_radio_checked"
            app:iconSize="12dp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_back" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_check" />

    </LinearLayout>

</FrameLayout>