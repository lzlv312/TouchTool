<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minWidth="24dp"
    android:minHeight="24dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/pinSlotBox"
        android:layout_width="12dp"
        android:layout_height="12dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:singleLine="true"
        android:textSize="9sp"
        tools:ignore="SmallSp" />

    <FrameLayout
        android:id="@+id/pinBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cpButton"
        style="@style/Theme.TouchTool.IconButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="4dp"
        app:icon="@drawable/icon_copy"
        app:iconSize="14dp"
        app:iconTint="?attr/colorOutline" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeButton"
        style="@style/Theme.TouchTool.IconButton.Outlined"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon="@drawable/icon_remove"
        app:iconTint="?attr/colorOutline" />

</LinearLayout>