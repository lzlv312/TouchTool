<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="240dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="96dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingHorizontal="4dp">

            <com.google.android.material.button.MaterialButton
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:backgroundTint="?attr/colorOnSurfaceVariant"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/zoomButton"
                    style="@style/Theme.TouchTool.IconButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon="@drawable/icon_zoom_in" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/closeButton"
                    style="@style/Theme.TouchTool.IconButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon="@drawable/icon_close" />

            </LinearLayout>

        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            app:cardBackgroundColor="?attr/colorSurface">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contentBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/float_node_info_item" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/parentButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:icon="@drawable/icon_arrow_up"
                app:tint="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/preButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:icon="@drawable/icon_arrow_left"
                app:tint="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:icon="@drawable/icon_arrow_right"
                app:tint="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/childButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:icon="@drawable/icon_arrow_down"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>