<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minWidth="24dp"
    android:minHeight="24dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/pinSlotBox"
        android:layout_width="12dp"
        android:layout_height="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:clipChildren="false"
        android:hint="@string/custom_pin_name"
        android:maxWidth="192dp"
        android:minHeight="24dp"
        app:hintTextAppearance="@style/Theme.TouchTool.TextAppearance.Hint"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="20dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:textSize="8sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:id="@+id/pinBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/visibleButton"
        style="@style/Theme.TouchTool.IconButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="4dp"
        app:icon="@drawable/icon_visibility"
        app:iconTint="?attr/colorOutline" />

    <com.google.android.material.button.MaterialButtonGroup
        android:id="@+id/varBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:baselineAligned="false"
        android:spacing="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keySlot"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/typeSpinner"
            style="?attr/materialButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="48dp"
            android:paddingHorizontal="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/valueSlot"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="0dp" />

    </com.google.android.material.button.MaterialButtonGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeButton"
        style="@style/Theme.TouchTool.IconButton.Outlined"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon="@drawable/icon_remove"
        app:iconTint="?attr/colorOutline" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="4dp"
        android:alpha="0.5"
        android:src="@drawable/icon_drag_pan"
        app:tint="?attr/colorOutline" />

</LinearLayout>