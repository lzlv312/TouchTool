<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minWidth="24dp"
    android:minHeight="24dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/pinSlotBox"
        android:layout_width="12dp"
        android:layout_height="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:clipChildren="false"
        android:hint="@string/custom_pin_name"
        android:maxWidth="192dp"
        android:minHeight="24dp"
        app:hintTextAppearance="@style/Theme.TouchTool.TextAppearance.Hint"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="20dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:textSize="9sp"
            tools:ignore="SmallSp" />

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:id="@+id/pinBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/keySlot"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/shape_border"
        android:gravity="center"
        android:minWidth="48dp"
        android:paddingHorizontal="4dp"
        android:textColor="?attr/colorPrimary"
        android:textSize="11sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeButton"
        style="@style/Theme.TouchTool.IconButton.Outlined"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon="@drawable/icon_remove"
        app:iconTint="?attr/colorOutline" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="4dp"
        android:src="@drawable/icon_sequence"
        app:tint="?attr/colorSecondaryFixed" />

</LinearLayout>