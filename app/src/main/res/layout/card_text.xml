<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|center"
        android:alpha="0.1"
        app:srcCompat="@drawable/icon_edit"
        app:tint="?attr/colorSecondary" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:minWidth="96dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lockButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/fill_button_background_check"
                android:checkable="true"
                app:icon="@drawable/icon_lock_open"
                app:iconSize="16dp"
                app:iconTint="@color/button_container_check" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copyButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                app:icon="@drawable/icon_content_copy"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/removeButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/fill_button_background_error_check"
                android:checkable="true"
                app:icon="@drawable/icon_delete"
                app:iconSize="16dp"
                app:iconTint="@color/button_container_check" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textBox"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="?attr/colorTertiary"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:paddingVertical="0dp"
                android:textColor="?attr/colorOnTertiary" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:alpha="0.5" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dragImage"
        style="@style/Theme.TouchTool.IconButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end|bottom"
        android:scaleType="centerInside"
        android:src="@drawable/icon_line_curve"
        android:tint="?attr/colorOutlineVariant"
        android:translationX="2dp"
        android:translationY="2dp" />

</FrameLayout>