<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:alpha="0.1"
        app:srcCompat="@drawable/icon_settings"
        app:tint="?attr/colorSecondary" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="96dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:lines="1"
                android:textSize="11sp"
                tools:ignore="SmallSp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon="@drawable/icon_edit"
                app:iconSize="16dp" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="?attr/colorTertiaryContainer"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:textColor="?attr/colorOnTertiaryContainer"
            android:textSize="11sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/expandButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon="@drawable/icon_symptoms"
                app:iconSize="16dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lockButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon="@drawable/icon_lock_open"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copyButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                app:icon="@drawable/icon_content_copy"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/removeButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/fill_button_background_error_check"
                android:checkable="true"
                app:icon="@drawable/icon_delete"
                app:iconSize="16dp"
                app:iconTint="@color/button_container_check" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pinBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/inBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/outBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="vertical" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:textSize="11sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/bottomBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="4dp"
        android:alpha="0.1"
        android:singleLine="true"
        android:textColor="?attr/colorSecondary" />

</FrameLayout>