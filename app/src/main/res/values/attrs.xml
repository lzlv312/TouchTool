<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="icon" format="reference" />
    <attr name="title" format="string" />
    <attr name="description" format="string" />

    <declare-styleable name="SettingWidgetNormal">
        <attr name="icon" />
        <attr name="title" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="SettingWidgetSwitch">
        <attr name="icon" />
        <attr name="title" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="SettingWidgetSelect">
        <attr name="icon" />
        <attr name="title" />
        <attr name="description" />
        <attr name="options" format="reference" />
    </declare-styleable>

    <declare-styleable name="SettingWidgetSlider">
        <attr name="icon" />
        <attr name="title" />
        <attr name="description" />
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="step" format="integer" />
        <attr name="value" format="integer" />
    </declare-styleable>
</resources>